{
  "name": "@sma/backend",
  "version": "1.0.0",
  "description": "Backend services for Social SoloBoss Automation platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:e2e": "jest --testPathPattern=e2e --runInBand",
    "test:performance": "jest --testPathPattern=performance --runInBand --detectOpenHandles",
    "test:coverage": "jest --coverage --runInBand",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "db:init": "ts-node src/database/init.ts",
    "db:migrate": "ts-node src/database/init.ts",
    "db:seed": "ts-node src/database/seed.ts",
    "db:seed:dev": "ts-node src/database/seed.ts development",
    "db:seed:test": "ts-node src/database/seed.ts test",
    "db:validate": "ts-node src/database/validation.ts",
    "db:reset": "npm run db:init && npm run db:seed:dev",
    "db:reset:test": "npm run db:init && npm run db:seed:test",
    "db:test-schema": "ts-node src/database/test-schema.ts"
  },
  "dependencies": {
    "@sma/shared": "^1.0.0",
    "axios": "^1.4.0",
    "bcrypt": "^5.1.0",
    "bull": "^4.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.0",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.0",
    "express-validator": "^7.0.0",
    "helmet": "^7.0.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.0",
    "redis": "^4.6.0",
    "rss-parser": "^3.13.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.0",
    "web-push": "^3.6.7",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.5",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.0",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.0",
    "@types/web-push": "^3.6.4",
    "jest": "^29.5.0",
    "nodemon": "^3.0.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.1.0"
  }
}
